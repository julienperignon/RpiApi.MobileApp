    <StackLayout IsVisible="{Binding DisplayGpioDetails}"  Orientation="Horizontal" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="20">
      <Label Text="Edge" FontAttributes="Bold" FontSize="15" />
